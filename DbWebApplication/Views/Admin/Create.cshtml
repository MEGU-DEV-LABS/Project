@model DbWebApplication.ViewModels.CreateViewModel

@{
ViewData["Title"] = "Створити предмет";
}
<div class="row">
    <h2 class="mb-5">Створити предмет</h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post">

        <div class="form-floating mb-3">
            <input asp-for="SubjectName" class="form-control" aria-required="true" placeholder="First Name"/>
            <label asp-for="SubjectName"></label>
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Завантажити зображення</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Створити</button>
    </form>


</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
