@model DbWebApplication.ViewModels.CreateViewModel

@{
ViewData["Title"] = "Створити предмет";
}

<h2>Створити предмет</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="SubjectName"></label>
        <input asp-for="SubjectName" class="form-control" />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Завантажити зображення</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Створити</button>
</form>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
